<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">

    <TextView
        android:id="@+id/itinerarynameRouter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:text="dummy"
        android:padding="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/traveltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="travel time:  "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/traveltimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/traveltime"
        android:text="0 min" />

    <TextView
        android:id="@+id/expenditureValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/expenditure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expenditure:  "
        android:layout_toLeftOf="@id/expenditureValue"
        android:textStyle="bold"/>

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:background="@color/grey"
        android:layout_width = "match_parent"
        android:layout_below="@id/itineraryDescription"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewRouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>